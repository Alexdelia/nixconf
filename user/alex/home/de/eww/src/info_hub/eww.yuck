(defpoll time
	:interval "1m"

	`date '+%H %M'`
)

(defwidget info_box []
	(box
		:class "info-box"
		:orientation "vertical"
		:halign "baseline"
		:valign "baseline"

		(children)
	)
)

(defwidget time_box []
	(box
		:class "time-box"
		:orientation "vertical"
		:halign "center"
		:valign "center"

		time
	)
)

(deflisten music_title
	`playerctl --player=mpd --follow metadata xesam:title`
)

(deflisten music_art_url
	`playerctl --player=mpd --follow metadata mpris:artUrl`
)

(defwidget music_box []
	(box
		:class "music-box"
		:orientation "horizontal"
		:halign "fill"
		:valign "fill"

		(box
			:class "music-art"
			:style "background-image: url('${music_art_url}'); background-size: cover;"
			:vexpand true
			:hexpand true
			:height 300
			:width 300
		)

		(box
			:orientation "vertical"
			:halign "fill"
			:valign "fill"
			:hexpand true
			:vexpand true

			(label
				:text music_title
				:truncate true
			)
		)

		;; (image
