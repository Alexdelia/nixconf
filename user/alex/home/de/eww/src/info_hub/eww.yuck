				:halign "end"
				:valign "fill"
				:hexpand false
				:vexpand false
				:space-evenly false

				(music_box)

				(box
					:style "background-color: rgba(0, 0, 255, 0.2); margin: 1rem;"
					:width 100
				)
			)
			(box
				:orientation "horizontal"
				:halign "end"
				:valign "fill"
				:hexpand false
				:vexpand false
				:space-evenly false

				(box
					:style "background-color: rgba(0, 0, 255, 0.2); margin: 1rem;"
					:width 100
				)
				(box
					:style "background-color: rgba(0, 0, 255, 0.2); margin: 1rem;"
					:width 100
				)

				(info_box
					(time_box)
				)

				(box
					:style "background-color: rgba(0, 0, 255, 0.2); margin: 1rem;"
					:width 100
				)
			)
			(box
				(button
					"test"
				)
				(button
					"test"
				)
				(button
					"test"
				)
			)
		)
	
		(box
			:halign "end"
			:valign "fill"
			:style "background-color: rgba(0, 255, 0, 0.2); margin: 1rem;"
			:width 100
		)
	)

